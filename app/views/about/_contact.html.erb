<div class="contact container" id="contact">
  <%= form_for :message do |msg| %>
    <% if @message.errors.any? %>
      <div class = "error-explanation" id="errors">
        <ul>
          <% @message.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= msg.label :name %>
      <%= msg.text_field :name, class: 'form-control', id: 'name' %>
    </div>
    <div class="form-group">
      <%= msg.label :email %>
      <%= msg.text_field :email, class: 'form-control', id: 'email' %>
    </div>
    <div class="form-group">
      <%= msg.label :body %>
      <%= msg.text_area :body, class: 'form-control', id: 'body', rows: '3' %>
    </div>
    <%= msg.submit 'Submit', class: 'btn btn-outline-success my-2 my-sm-0' %>
  <% end %>
</div>
