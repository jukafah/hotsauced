<div class="container" id="review-display-page">
  <h3 id="header">REVIEW</h3>
  <div class="row my-2">
    <div class="col-sm-8" id="review">
      <div class="my-2 border-bottom font-weight-bold" id="headline">
        <%= @review.headline %>
      </div>
      <div class="my-2" id="body">
        <%= simple_format @review.body %>
      </div>
      <div class="align-self-center" id="rating-info">
        <%= image_tag('rating_0.svg', size: '120x75', class: 'img-fluid', id: 'rating-bottles') %>
      </div>
      <div class="my-2 text-right blockquote-footer" id="user">
        <%= @review.user %>
      </div>
    </div>
    <div class="col-sm-4 d-flex flex-column" id="sauce">
      <div class="my-2 text-center font-weight-bold">
        <%= link_to @sauce.name, sauce_path(@sauce), class: 'text-dark', id: 'name' %>
      </div>
      <div class="my-2 align-self-center">
        <%= image_tag default_image?(@sauce), width: "150", class: "img-fluid", id: "image" %>
      </div>
      <div class="align-self-center" id="rating-info">
        <%= image_tag('rating_0.svg', size: '120x75', class: 'img-fluid', id: 'rating-bottles') %>
        <div class="mt-2 text-center text-muted" id="average-rating"><%= @sauce.average_rating %> out of 5</div>
        <div class="text-center text-muted" id="average-rating"><%= pluralize(@sauce.reviews.count, 'review') %></div>
      </div>
    </div>
  </div>
</div>
