<div class="form">
<%= form_with model: @sauce, local: true do |form| %>
  <% if @sauce.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@sauce.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @sauce.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %><br>
  </p>
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
</div>
