<div class="sauce-form" id="sauce-form">
  <%= form_with model: @sauce, local: true do |sauce| %>
    <div class="form-group mt-3">
      <%= sauce.label :name %>
      <%= sauce.text_field :name, class: 'form-control', id: 'name' %>
      <% if @sauce.errors.key?("name") %>
        <div class="invalid-feedback">
          <%= @sauce.errors[:name].join(' and ').prepend("Name ").concat('.') %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= sauce.label :description %>
      <%= sauce.text_area :description, class: 'form-control', id: 'description', rows: '12' %>
      <% if @sauce.errors.key?("description") %>
        <div class="invalid-feedback">
          <%= @sauce.errors[:summary].join(' and ').prepend("Description ").concat('.') %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= sauce.label :pepper %>
      <%= sauce.text_field :pepper, class: 'form-control', id: 'pepper' %>
    </div>
    <div class="form-group">
      <%= sauce.label :ingredients %>
      <%= sauce.text_area :ingredients, class: 'form-control', id: 'ingredients' %>
    </div>
    <div class="form-group">
      <%= sauce.label :brand %>
      <%= sauce.text_field :brand, class: 'form-control', id: 'brand' %>
    </div>
    <div class="form-group">
      <%= sauce.label :origin %>
      <%= sauce.text_field :origin, class: 'form-control', id: 'origin' %>
    </div>
    <div class="form-group">
      <%= sauce.label :image %>
      <%= sauce.file_field :image, class: 'form-control-file', id: 'image-upload' %>
    </div>
    <%= sauce.submit 'Submit', class: 'btn btn-secondary my-2', id: 'submit' %>
  <% end %>
</div>
